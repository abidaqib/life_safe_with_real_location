<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#74d776"
    tools:context=".Verifie">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113dp"
            android:background="@drawable/edittext_background"
            android:hint="Code"
            android:inputType="phone"
            android:padding="5dp"
            android:textSize="22sp" />


        <Button
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_code"
            android:layout_marginTop="10dp"
            android:background="@drawable/butoon_background"
            android:layout_marginLeft="50dp"
            android:text="submit"
            android:textColor="#9dda9d"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginRight="50dp"
            android:onClick="onclickSubmit"
            />
        <Button
            android:id="@+id/bt_reSandMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_submit"
            android:layout_marginTop="10dp"
            android:background="@drawable/butoon_background"
            android:layout_marginLeft="120dp"
            android:text="send code again"
            android:textColor="#9dda9d"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_marginRight="120dp"
            android:onClick="onclickReSedind"
            />
    </RelativeLayout>

</LinearLayout>